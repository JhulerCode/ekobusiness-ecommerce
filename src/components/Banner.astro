---
import banner1 from '../assets/banner1.webp'
import banner2 from '../assets/banner2.webp'
import banner3 from '../assets/banner3.webp'

const banners = [banner1, banner2, banner3]
---

<section class="relative w-full h-[70vh] sm:h-[80vh] md:h-[93vh] overflow-hidden">
    {
        banners.map((b, i) => (
            <img
                src={b.src}
                alt="Tienda Sunka Herbal Tea"
                class="banner-fade"
                style={`animation-delay: ${i * 6}s`}
            />
        ))
    }
</section>

<style>
    .banner-fade {
        position: absolute;
        inset: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: left;
        opacity: 0;
        animation: bannerFade 18s infinite;
    }

    @media (min-width: 1024px) {
        .banner-fade {
            object-position: center;
        }
    }

    @keyframes bannerFade {
        0% {
            opacity: 0;
        }
        8% {
            opacity: 1;
        }
        33% {
            opacity: 1;
        }
        41% {
            opacity: 0;
        }
        100% {
            opacity: 0;
        }
    }
</style>
