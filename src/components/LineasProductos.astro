---
const lineas = [
    {
        nombre: 'FILTRANTE',
        imagen: 'https://sunka.pe/wp-content/uploads/2022/04/MGC15SL-3.jpg',
        slug: 'filtrante',
    },
    {
        nombre: 'GRANEL',
        imagen: 'https://sunka.pe/wp-content/uploads/2022/04/MGC15SL-3.jpg',
        slug: 'granel',
    },
    {
        nombre: 'LUXURY',
        imagen: 'https://sunka.pe/wp-content/uploads/2022/04/MGC15SL-3.jpg',
        slug: 'luxury',
    },
];
---

<section class="py-16 bg-white">
    <div class="w-full px-4 md:px-6">
        <h2
            class="text-3xl md:text-4xl font-heading font-bold text-center mb-12 text-gray-900"
        >
            Nuestras líneas de productos
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-2">
            {
                lineas.map((linea) => (
                    <div class="group relative rounded-2xl overflow-hidden h-[36rem] cursor-pointer shadow-sm transition block">
                        <img
                            src={linea.imagen}
                            alt={linea.nombre}
                            class="absolute inset-0 w-full h-full object-cover transition-transform duration-500"
                        />

                        <div class="absolute inset-0 bg-black/25 transition group-hover:bg-black/35" />

                        <div class="relative z-10 h-full flex flex-col justify-end items-center p-6 text-center">
                            <h3 class="text-3xl md:text-4xl font-bold text-white mb-4">
                                {linea.nombre}
                            </h3>
                            <a
                                href={`/linea/${linea.slug}`}
                                class="bg-white text-black py-2 px-4 rounded-lg font-medium shadow-sm hover:bg-gray-100 transition"
                            >
                                Ver más
                            </a>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>
