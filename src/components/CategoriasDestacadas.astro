---
import { getCategoriasDestacadas } from '../lib/api';
const categorias = await getCategoriasDestacadas();
---

<section class="py-16 bg-white">
    <div class="max-w-6xl mx-auto px-6">
        <h2
            class="text-3xl md:text-4xl font-heading font-bold text-center mb-12 text-gray-900"
        >
            Categor√≠as destacadas
        </h2>

        <div class="grid grid-cols-6 gap-4">
            {
                categorias.map((cat, index) => (
                    <a
                        href={`/categoria/${cat.slug}`}
                        class={`group relative rounded-2xl overflow-hidden h-72 cursor-pointer shadow-md transition block ${
                            index < 2 ? 'col-span-3' : 'col-span-2'
                        }`}
                    >
                        <img
                            src={cat.imagen}
                            alt={cat.nombre}
                            class="absolute inset-0 w-full h-full object-cover group-hover:brightness-85"
                        />

                        <div class="relative z-10 h-full flex flex-col justify-end p-6">
                            <h3 class="text-2xl font-semibold text-white mb-1">
                                {cat.nombre}
                            </h3>

                            <p class="text-sm text-white opacity-90">
                                {cat.descripcion}
                            </p>
                        </div>
                    </a>
                ))
            }
        </div>
    </div>
</section>
